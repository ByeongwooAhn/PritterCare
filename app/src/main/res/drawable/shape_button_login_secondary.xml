<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/loginSecondaryBtnRippleColor"> <!-- ripple 색상 설정 -->

    <!-- 기본 배경 모양 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/loginSecondaryBtnColor"/> <!-- 배경색을 흰색으로 변경 -->
            <corners android:radius="@dimen/login_btn_border_radius"/>
            <stroke
                android:width="@dimen/login_btn_border_width"
            android:color="@color/loginSecondaryBtnBorderColor"/>
        </shape>
    </item>
</ripple>
