<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/shape_card_white"
    android:elevation="5dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <!-- 케이지 이름 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거북이 케이지"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvCageSerialNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/N : "
            android:textColor="@color/etTextHintColor"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- 동물 이미지 -->
    <ImageView
        android:id="@+id/ivAnimalImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:contentDescription="케이지 동물 이미지"
        android:src="@drawable/ic_turtle" />
</LinearLayout>
