<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.prittercare.view.main.LightFragment">

    <!-- Title -->
    <TextView
        android:id="@+id/lightTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="조명 관리"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <Button
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ON" />


        <Button
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OFF" />
    </LinearLayout>

    <!-- Light Level Display -->
    <TextView
        android:id="@+id/lightLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Level 1"
        android:textColor="#666666"
        android:textSize="16sp" />

    <!-- Lighting Control Buttons and Points -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Left Button -->
        <ImageButton
            android:id="@+id/btnLeft"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Move Left"
            android:src="@drawable/ic_left_arrow"
            app:tint="@color/primaryColor" />

        <!-- Points -->
        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <!-- Point Indicators -->
            <!-- Line connecting points -->
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/darker_gray" />

            <!-- Point 1 -->
            <ImageView
                android:id="@+id/point1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/circle_point"
                android:visibility="invisible"
                app:tint="@color/pointColor1" />

            <!-- Point 2 -->
            <ImageView
                android:id="@+id/point2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="45dp"
                android:src="@drawable/circle_point"
                android:visibility="invisible"
                app:tint="@color/pointColor2" />

            <!-- Point 3 -->
            <ImageView
                android:id="@+id/point3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@drawable/circle_point"
                android:visibility="invisible"
                app:tint="@color/pointColor3" />

            <!-- Point 4 -->
            <ImageView
                android:id="@+id/point4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="135dp"
                android:src="@drawable/circle_point"
                android:visibility="invisible"
                app:tint="@color/pointColor4" />

            <!-- Point 5 -->
            <ImageView
                android:id="@+id/point5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/circle_point"
                android:visibility="invisible"
                app:tint="@color/pointColor5" />
        </FrameLayout>

        <!-- Right Button -->
        <ImageButton
            android:id="@+id/btnRight"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Move Right"
            android:src="@drawable/ic_right_arrow" />
    </LinearLayout>
</LinearLayout>