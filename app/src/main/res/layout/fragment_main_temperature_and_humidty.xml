<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".view.fragments.TemperatureAndHumidtyFragment">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/jua"
        android:text="온도 습도 설정"
        android:textColor="#333333"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/layout_container_temperature"
            android:layout_width="0dp"
            android:layout_height="144dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_button02_fish"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_get_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="설정된 온도 값 : -°C"
                android:textColor="@color/basicColor03_fish"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_temperature_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="온도 설정 "
                    android:textColor="@color/basicColor01_fish"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_set_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="온도 값"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textColorHint="#66FFFFFF"
                    android:textCursorDrawable="@color/etCursorColor"
                    android:textSelectHandle="@color/etHandleColor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_temperature_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="10"
                    android:text="°C"
                    android:textColor="@color/basicColor01_fish"
                    android:textSize="18sp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_set_temperature"
                style="@style/ButtonStyle01_fish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="설정" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_container_humidity"
            android:layout_width="0dp"
            android:layout_height="144dp"
            android:layout_weight="1"
            android:background="@drawable/shape_button02_fish"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_get_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="설정된 습도 값 : -%"
                android:textColor="@color/basicColor03_fish"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_humidity_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="습도 설정 "
                    android:textColor="@color/basicColor01_fish"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_set_humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="습도 값"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textColorHint="#66FFFFFF"
                    android:textCursorDrawable="@color/etCursorColor"
                    android:textSelectHandle="@color/etHandleColor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_humidity_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="10"
                    android:text="%"
                    android:textColor="@color/basicColor01_fish"
                    android:textSize="18sp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_set_humidity"
                style="@style/ButtonStyle01_fish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="설정" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>